@using System.ComponentModel.DataAnnotations
@rendermode InteractiveServer

<EditForm Model="@Address" class="default-form rounded-md bg-gray-200 py-8 px-10 border shadow-xl mb-12">
    <DataAnnotationsValidator />

    <div class="grid gap-12 md:grid-cols-2 mb-12">
        <div>
            <label>Recipient</label>

            <div class="grid gap-6">
                <div class="relative">
                    <InputText @bind-Value="Address.FirstName" class="floating-placeholder" placeholder=" " />
                    <label>First name</label>
                </div>
                <div class="relative">
                    <InputText @bind-Value="Address.LastName" class="floating-placeholder" placeholder=" " />
                    <label>Last name</label>
                </div>
                <div class="relative">
                    <input name="phone_number" class="floating-placeholder" placeholder=" " />
                    <label>Phone number</label>
                </div>
            </div>
        </div>
        <div>
            <label>Address</label>

            <div class="grid gap-6 md:grid-cols-2">
                <div class="relative col-span-full">
                    <InputText @bind-Value="Address.Line1" class="floating-placeholder" placeholder=" " />
                    <label>Line 1</label>
                </div>
                <div class="relative col-span-full">
                    <InputText @bind-Value="Address.Line2" class="floating-placeholder" placeholder=" " />
                    <label>Line 2</label>
                </div>
                <div class="relative">
                    <InputText @bind-Value="Address.City" class="floating-placeholder" placeholder=" " />
                    <label>City</label>
                </div>
                <div class="relative">
                    <InputText @bind-Value="Address.State" class="floating-placeholder" placeholder=" " />
                    <label>State</label>
                </div>
                <div class="relative">
                    <InputText @bind-Value="Address.Zip" class="floating-placeholder" placeholder=" " />
                    <label>Zip</label>
                </div>
                <div class="relative">
                    <InputText @bind-Value="Address.Country" class="floating-placeholder" placeholder=" " />
                    <label>Country</label>
                </div>
            </div>
        </div>
    </div>

    <div class="flex gap-4 justify-center">
        <button class="default-button" type="submit">Submit</button>
        <SmartPasteButton DefaultIcon class="default-button secondary" />
    </div>
</EditForm>

